<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="client_notes_addition" inherit_id="sale.report_saleorder_document">
        <xpath expr="//p[@t-field='doc.note']" position="after">
            <p t-if="doc.client_notes">
                Notas del cliente: <span t-field="doc.client_notes" />
            </p>
        </xpath>
    </template>
</odoo>
