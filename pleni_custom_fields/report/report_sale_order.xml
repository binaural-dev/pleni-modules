<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_saleorder_document_inherit_date_delivery_view" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@id='informations']/div[2]" position="after">
      <div t-if="doc.date_delivery_view and doc.am_pm and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
        <strong>Fecha Y Hora de Entrega</strong>
        <p class="m-0" t-field="doc.date_delivery_view" style="float: left;" />
        <p t-field="doc.am_pm" style="margin-left: 90px;" />
      </div>
    </xpath>
  </template>
</odoo>