<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_company_rif" model="ir.ui.view">
            <field name="name">validation rif</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='vat']" position="after">
                        <field name="loc_ven" invisible="1"/>
                        <field name="rif" placeholder="Ej.: J-012345678" string="RIF" attrs="{'required': [('loc_ven', '=', True)], 'invisible': [('loc_ven', '=', False)]}"/>
                    </xpath>
            </field>
        </record>
    </data>
</odoo>

