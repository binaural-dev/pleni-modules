<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="as_shop_product_label_height" inherit_id="website_sale.products_item">
        <xpath expr="//div[hasclass('oe_product_image')]" position="before">
            <style>
                .o_wsale_products_grid_table_wrapper .oe_product .oe_product_image {
                    height: 13vh !important;
                }
            </style>
        </xpath>
    </template>
    <template id="o_quick_view_title_style" inherit_id="website_sale.products_item">
        <xpath expr="//h6[hasclass('o_wsale_products_item_title')]/a[1]" position="replace">
            <a itemprop="name" t-att-href="product_href" t-att-content="product.name" t-field="product.name" 
                class="o_quick_view_title" t-att-data-product-product-id="product.product_variant_ids[0].id" 
                t-att-data-product_template_id="product.id" title="Quick View" type="button" href=""/>
        </xpath>
        <xpath expr="//h6[hasclass('o_wsale_products_item_title')]/a[1]" position="after">
            <script type="text/javascript">
                document.querySelectorAll('.o_quick_view_title').forEach(function(element) {
                    element.removeAttribute("href")
                });
            </script>
        </xpath>


    </template>
	<template id="payment_ux_improvement" inherit_id="website_sale.cart_lines">
        <xpath expr="//div[1]" position="before">
			<style>
                @media(max-width: 569px){
                    .d-css-none-3mit{
                        display: none;
                    }
                    .d-css-block-3mit{
                        display: block;
                    }
                    .new-position-mobile{
                        margin-top: 5px;
                        padding: 5px 0px 5px 0px;
                    }
                    .new-td-action{
                        display: none;
                    }
                }
                @media(min-width: 570px){
                    .d-css-block-3mit{
                        display: none;
                    }
                    .new-position-mobile{
                        display: none;
                    }
                }
                @media(min-width: 768px){
                    .new-td-img{
                        display: none;
                    }
                }

                @media(min-width: 1200px){
                    .show-only-mobile {
                        display: none;
                    }
                }
                @media(max-width: 767px){
                    .new-td-img{
                        vertical-align: middle;
                        text-align: center;
                    }
                }

                .oe_cart table .td-img > span {
                    border: none;
                }

                a {
                    color: #E44E25
                }
            </style>
        </xpath>
        <xpath expr="//table[1]/tbody[1]/t[1]/tr[1]/td[3]/div[1]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//table[1]/tbody[1]" position="before">
            <style>
                table#cart_products > tbody > tr {
                    box-shadow: 0px 0px 11px 0px rgba(0, 0, 0, 0.13);
                }
                .oe_cart table tbody td {
                    padding: 1rem;
                }
                
            </style>
        </xpath>
        <xpath expr="//table[1]" position="before">
            <style>
                #cart_products {
                    border-collapse: separate;
                    border-spacing: 0 20px;
                }
            </style>
        </xpath>
        <xpath expr="//table[1]/thead[1]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//table[1]/thead[1]/tr[1]/th[2]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//td[hasclass('td-product_name')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//td[hasclass('td-price')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//th[hasclass('td-img')]" position="after">
			<th class="new-td-img"></th>
        </xpath>
        <xpath expr="//th[hasclass('td-img')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//th[hasclass('td-price')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//td[@align='center']" position="after">
