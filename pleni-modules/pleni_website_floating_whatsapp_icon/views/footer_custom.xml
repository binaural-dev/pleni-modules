<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="whatsapp_footer_custom" name="Whatsapp Footer" inherit_id="website.footer_custom">
    <xpath expr="//div[@id='footer']" position="before">
      <a t-attf-href="https://wa.me/#{website.atc_mobile_number}" class="atc_whatsapp_web" target="_blank">
        <i class="fa fa-whatsapp atc-icon" />
      </a>
      <style>
        #footer {
          display: none;
        }
      </style>
    </xpath>
  </template>
</odoo>