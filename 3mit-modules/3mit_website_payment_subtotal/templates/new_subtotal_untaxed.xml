<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="website_sale_new_subtotal" inherit_id="website_sale.total">
        <xpath expr="//tr[@id='order_total_untaxed']" position="replace">
            <tr id="order_total_untaxed">
                <td class="text-right border-0">Subtotal:</td>
                <td class="text-xl-right border-0" >
                    <span t-field="website_sale_order.amount_untaxed_without_delivery" class="monetary_field" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>